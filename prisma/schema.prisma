generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int           @id @default(autoincrement())
  name      String?
  email     String        @unique
  password  String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  courses   VideoCourse[]
}

model VideoCourse {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  image       String
  videoUrl    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}
